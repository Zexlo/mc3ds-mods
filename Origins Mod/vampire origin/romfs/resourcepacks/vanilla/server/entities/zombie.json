	 },
	 
      "minecraft:zombie_adult": {
        "minecraft:movement": {
          "value": 0.23
        },
        "minecraft:behavior.mount_pathing": {
          "priority": 2,
          "speed_multiplier": 1.25,
          "target_dist": 0.0,
          "track_target": true
        },
      "minecraft:rideable": {
        "seat_count": 1,
        "family_types": [
           "zombie"
        ],
        "seats": {
          "position": [0, 1.1, -0.6]
        }
       }		
      },

      "minecraft:zombie_jockey": {
        "minecraft:behavior.find_mount": {
          "priority": 1,
          "within_radius": 12	  
        }
      }
    },

    "components": {
      "minecraft:identifier": {
        "id": "minecraft:zombie"
      },
      "minecraft:nameable": {
      },
	  "minecraft:burns_in_daylight": {
	  },

