        "can_pass_doors": true,
        "can_open_doors": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:health": {
        "value": 20,
        "max": 20
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0
      },
      "minecraft:attack": {
        "damage": 3
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/zombie.json"
      },

      // Zombie Behaviors
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.melee_attack": {
        "priority": 3,
        "speed_multiplier": 1,
        "track_target": false
      },
      "minecraft:behavior.move_towards_restriction": {
        "priority": 4,
        "speed_multiplier": 1
      },
