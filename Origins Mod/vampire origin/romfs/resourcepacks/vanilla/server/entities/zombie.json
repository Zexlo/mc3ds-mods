        "priority": 6,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "within_radius": 25,
        "entity_types": [
          {
            "filters": { "other_with_families": [ "irongolem", "snowgolem", "villager" ] },
            "max_dist": 35
          }
        ]
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 120,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:zombie_adult"
              ]
            }
          },
          {
            "weight": 60,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:zombie_adult",
				"minecraft:leader"			
              ]
            }
          },		  
          {
			"filters": {
			  "is_world_difficulty": "hard"
			},			  
            "weight": 100,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:zombie_adult",
				"minecraft:door_smash"	
              ]
            }
          },		  
          {
            "weight": 20,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:zombie_baby"			
              ]

            }
          },
          {
            "weight": 16,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:zombie_baby",
                "minecraft:zombie_jockey"
              ]
            }
          }
        ]
      }
